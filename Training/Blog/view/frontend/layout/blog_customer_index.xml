<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd" layout="2columns-left">
    <update handle="customer_account"/>
    <body>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">Submit your Post</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
                <block class="Training\Blog\Block\Mainblog" name="customer.account.link.blog" template="Training_Blog::account/link/blog.phtml" cacheable="false"/>
        </referenceContainer>
    </body>
</page>